<section class="signup_container">
  <div class="headline_box">
    <h2 class="signup_headline">新規登録</h2>
  </div>
  <table border="1" class="signup_table">
    <%= form_for @user, url: {action: "confirm"} do |f| %>
      <%= devise_error_messages! %>
      <tr>
        <div class="field">
          <th><%= f.label :氏名 %><br /></th>
          <th><%= f.text_field :user_name%></th>
        </div>
      </tr>
      <tr>
        <div class="field">
          <td><%= f.label :フリガナ %><br /></td>
          <td><%= f.text_field :user_phonetic %></td>
        </div>
      </tr>
      <tr>
        <div class="field">
          <td><%= f.label :郵便番号 %><br /></td>
          <td><%= f.text_field :postal %></td>
        </div>
      </tr>
      <tr>
        <div class="field">
          <td><%= f.label :住所 %><br /></td>
          <td><%= f.text_field :address %></td>
        </div>
      </tr>
      <tr>
        <div class="field">
          <td><%= f.label :電話番号 %><br /></td>
          <td><%= f.text_field :tell %></td>
        </div>
      </tr>
      <tr>
        <div class="field">
          <td><%= f.label :メールアドレス %><br /></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </div>
      </tr>
      <tr>
        <div class="field">
          <td><%= f.label :パスワード %></td>
          <td><%= f.password_field :password, autocomplete: "off" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上で入力して下さい)</em></td>
          <% end %><br />
        </div>
      </tr>
      <tr>
        <div class="field">
          <td><%= f.label :パスワード確認 %><br /></td>
          <td><%= f.password_field :password_confirmation, autocomplete: "off" %></td>
        </div>
      </tr>
    </table>

    <div class="actions">
      <%= f.submit "確認",class: "signup_btn" %>
    </div>
    <% end %>
    <%= render "users/shared/links" %>
</section>
